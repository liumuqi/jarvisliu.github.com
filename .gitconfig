[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[user]
	name = qishan
	email = qishan@mogujie.com
[diff]
	tool = vimdiff
[difftool]
	prompt = yes
[alias]
	d = difftool
    m = mergetool
    #lg = log --pretty=oneline --abbrev-commit --graph --decorate
    lg = log --pretty=format:"%h%x09%an%x09%ad%x09%s" --date=short --abbrev-commit --graph --decorate
    lsg = log --pretty=format:"%h%x09%an%x09%ad%x09%s" --author-date-order --abbrev-commit --graph --decorate
[color]
    diff = auto
	ui = true
[core]
	excludesfile = /Users/lmq/.gitignore
	ignorecase = false
	editor = vim
[merge]
	tool = vimdiff
	conflictstyle = diff3
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[credential]
	helper = store
[pull]
	rebase = true
